<h2>Posts Archive</h2>

<% if @posts.any? %>
  <ul>
    <% @posts.all.each do |post| %>
      <li><%= link_to post.title, post_path(post) %></li>
    <% end %>
  </ul>
<% else %>
  <% if current_user %>
    There aren't any posts on this blog yet.
    Do you want to <%= link_to 'add one?', new_post_path %>
  <% end %>
<% end %>

<% if current_user && @posts.any? %>
  <hr>
  <%= link_to 'Add a new post', new_post_path %>
<% else %>
   <p>Please sign in or create an account to add new posts</p>
<% end %>
