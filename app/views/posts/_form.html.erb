<%= render "layouts/errors", :object => @post %>

<div class="form-group">
  <%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
<br>
  <%= f.label :body %>
  <br>
  <%= f.text_area :body, cols: 70, rows: 25 %>
<br>
  <%= f.submit :class => "btn btn-success" %>
  <% end %>
</div>
