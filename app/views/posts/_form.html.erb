<%= render "layouts/errors", :object => @post %>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
  <br>
    <%= f.text_area :body, cols: 70, rows: 15 %>
  </div>
<%= f.submit :class => "btn btn-success" %>
<% end %>
