<%= render "layouts/errors", :object => @comment %>

<%= form_for [@post, @comment] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <br>
    <%= f.text_area :content, cols: 50, rows: 7 %>
  </div>
  <%= f.submit :class => "btn btn-success" %>
<% end %>
